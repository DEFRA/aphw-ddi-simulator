  },
  "author": "Defra",
  "contributors": [],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@hapi/hapi": "21.3.2",
    "applicationinsights": "2.9.1",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "hapi-pino": "12.1.0",
    "joi": "17.13.3",
    "log-timestamp": "0.3.0",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "jose": "^5.9.6",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "jest-junit": "16.0.0",
